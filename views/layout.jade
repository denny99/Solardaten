doctype html
html
    head
        title= title
        <!-- Latest compiled and minified CSS -->
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")

        <!-- Optional theme -->
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous")

        script(src="https://code.jquery.com/jquery-1.12.0.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous")
        script(src="/javascripts/algorithms.js")
body
    html
        body
            .container(style="padding-bottom: 30px")
                .row
                    .col-xs-12
                        - var statisticsClass = {'class': ""};
                        - var errorsClass= {'class': ""};
                        case tab
                            when "errors"
                                - errorsClass = {'class': "active"}
                            default
                                - statisticsClass = {'class': "active"}

                        ul.nav.nav-tabs.nav-justified
                            li(role='presentation')&attributes(statisticsClass)
                                a(href='/')
                                    span.glyphicon.glyphicon-equalizer(style="padding-right: 10px")
                                    | Statistiken
                            li(role='presentation')&attributes(errorsClass)
                                a(href='/errors')
                                    span.glyphicon.glyphicon-warning-sign(style="padding-right: 10px")
                                    | Fehlermeldungen

                            li(role='presentation')
                                a.bg-primary(href="/logout")
                                    span.glyphicon.glyphicon-logout(style="padding-right: 5px")
                                    | Logout

            block content
